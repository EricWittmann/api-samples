{
  "openapi" : "3.0.0",
  "info" : {
    "title" : "Beer API",
    "description" : "The official Beer API!  Search for both beers and breweries.",
    "license" : {
      "name" : "Apache 2.0",
      "url" : "https://www.apache.org/licenses/LICENSE-2.0"
    },
    "version" : "1.0.0"
  },
  "paths" : {
    "/beers/{beerId}" : {
      "get" : {
        "responses" : {
          "200" : {
            "description" : "A single beer.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Beer"
                }
              }
            }
          }
        }
      },
      "put" : {
        "requestBody" : {
          "description" : "Updated beer information.",
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/Beer"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "202" : {
            "description" : "The beer was updated."
          }
        }
      },
      "delete" : {
        "responses" : {
          "204" : {
            "description" : "The beer was deleted."
          }
        }
      },
      "parameters" : [ {
        "name" : "beerId",
        "in" : "path",
        "description" : "Unique ID of a beer.",
        "required" : true,
        "schema" : {
          "format" : "int32",
          "type" : "integer"
        }
      } ]
    },
    "/breweries" : {
      "get" : { },
      "post" : { }
    },
    "/breweries/{breweryId}" : {
      "get" : { },
      "put" : { },
      "delete" : { }
    },
    "/breweries/{breweryId}/beers" : {
      "get" : { },
      "post" : { }
    },
    "/beers" : {
      "get" : {
        "summary" : "Get All Beers",
        "description" : "Returns all of the beers in the database.",
        "responses" : {
          "200" : {
            "description" : "All the beers!",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Beer"
                  }
                }
              }
            }
          }
        }
      },
      "post" : {
        "summary" : "Create a Beer",
        "description" : "Adds a single beer to the dataset.",
        "requestBody" : {
          "description" : "The beer to add to the data set.",
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/Beer"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "201" : {
            "description" : "The beer was added."
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Beer" : {
        "title" : "Root Type for Beer",
        "description" : "The root of the Beer type's schema.",
        "required" : [ "abv", "id", "name", "style", "breweryId", "ounces" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "format" : "int32",
            "type" : "integer"
          },
          "abv" : {
            "format" : "double",
            "type" : "number"
          },
          "ibu" : {
            "format" : "double",
            "type" : "number"
          },
          "name" : {
            "type" : "string"
          },
          "style" : {
            "type" : "string"
          },
          "breweryId" : {
            "format" : "int32",
            "type" : "integer"
          },
          "ounces" : {
            "format" : "double",
            "type" : "number"
          }
        }
      },
      "Brewery" : {
        "title" : "Root Type for Brewery",
        "description" : "The root of the Brewery type's schema.",
        "type" : "object",
        "properties" : {
          "id" : {
            "format" : "int32",
            "type" : "integer"
          },
          "name" : {
            "type" : "string"
          },
          "city" : {
            "type" : "string"
          },
          "state" : {
            "type" : "string"
          }
        }
      }
    }
  },
  "tags" : [ {
    "name" : "beer",
    "description" : null
  }, {
    "name" : "brewery",
    "description" : null
  } ]
}